<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SeatReservations"
    tools:showIn="@layout/activity_seat_reservations"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:background="@color/red">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="@string/welcome"
                android:textColor="@color/white"
                android:padding="13dp" />

        </TableRow>


        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/fromPlace"
                android:layout_weight="1"
                android:padding="10dp"
                android:hint="@string/from"
                android:background="@color/white"/>
            </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/stations_arrays"
                android:prompt="@string/station_prompt" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/numberMessage"
                android:padding="10dp"
                android:textSize="18dp"
                android:text="@string/number"
                android:layout_marginRight="2dp"/>

            <EditText
                android:id="@+id/numberPassegers"
                android:padding="10dp"
                android:hint="@string/numberpassers"
                android:inputType="number"
                android:background="@color/white" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">


        <Button
            android:id="@+id/saveReservation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="@string/saveReserve"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@color/red"/>


            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:background="@color/red"/>
    </TableRow>


    </TableLayout>



    </LinearLayout>




